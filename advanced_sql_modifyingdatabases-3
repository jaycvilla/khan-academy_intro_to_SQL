SELECT * FROM instagram;

ALTER TABLE instagram ADD shares INTEGER default "unknown";

SELECT * FROM instagram;

UPDATE instagram SET shares = 10 WHERE photo_id = 1;
UPDATE instagram SET shares = 1000 WHERE photo_id = 10;
UPDATE instagram SET shares = 10000 WHERE photo_id = 5;
UPDATE instagram SET shares = 1000 WHERE photo_id = 6;
UPDATE instagram SET shares = 100000 WHERE photo_id = 7;
UPDATE instagram SET shares = 100 WHERE photo_id = 9;

DELETE FROM instagram WHERE photo_id = 8;

